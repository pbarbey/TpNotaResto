{% extends 'base.html.twig' %}

{% block title %}Liste des restaurants
{% endblock %}

{% block body %}
	{% if restaurants is not empty %}
		<div class="container">
			<div class="row">
				{% for restaurant in restaurants %}
					<div class="col-3 mt-4">
						<div class="card">
							<img src="{{ restaurant.image }}" class="card-img-top" alt="lorem picsum">
							<div class="card-body">
								<h5 class="card-title">{{ restaurant.nomRestaurant }}</h5><small>{{ restaurant.postalCode }}</small>
                                <p class="card-text"> #nb commentaire# ont été publiés pour ce restaurant.</p>
								<a href="#" class="btn btn-primary">Go somewhere</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	{% else %}
		<div class="container text-center mt-3">Pas encore de restaurant enregistrés</div>
	{% endif %}
{% endblock %}
